{
  "name": "portfolio",
  "description": "Personal portfolio of Nirmalya Ghosh",
  "license": "MIT",
  "author": "Nirmalya Ghosh <nirmalya.email@gmail.com>",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "prepare": "husky install",
    "release": "release-it",
    "start": "next start"
  },
  "devDependencies": {
    "@notionhq/client": "^1.0.4",
    "@release-it/conventional-changelog": "^5.0.0",
    "@stefanprobst/rehype-shiki": "^2.2.0",
    "@tailwindcss/typography": "^0.5.4",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "autoprefixer": "^10.4.7",
    "dayjs": "^1.11.4",
    "eslint": "<9.0.0",
    "eslint-config-next": "12.2.3",
    "husky": "^8.0.1",
    "image-downloader": "^4.3.0",
    "lint-staged": "^13.0.3",
    "next": "^12.2.3",
    "next-mdx-remote": "^4.1.0",
    "notion-to-md": "^2.5.3",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-external-img-size": "^0.1.0",
    "release-it": "^15.1.3",
    "remark-unwrap-images": "^3.0.1",
    "shiki": "^0.10.1",
    "slugify": "^1.6.5",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ],
    "*.mdx": [
      "prettier --write --parser mdx"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": false,
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "changelog.md"
      }
    },
    "hooks": {
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-next"
  },
  "dependencies": {
    "remark-embed-images": "^3.1.0"
  }
}
